<h1>Create New Users</h1>
<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <%= e %>
  <% end %>
<% end %>
<form action="/users" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>Name:</p>
  <input type="text" name="user[name]" id="Name" placeholder="Enter Name Here">
  <p>Email:</p>
  <input type="text" name="user[email]" id="Email" placeholder="Enter Email Here">
  <p>Password:</p>
  <input type="password" name="user[password]" id="Password" placeholder="Enter Password Here">
  <p>Password Confirmation:</p>
  <input type="password" name="user[password_confirmation]" id="Password_Confirmation" placeholder="Enter Password Confirmation Here">
  <input type="submit" name="Join" value="Join">
</form>
