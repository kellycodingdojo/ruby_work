<h4>Name:<%= @borrower.first_name %> <%= @borrower.last_name %> </h4>
<h4>Amount Needed: <%= @borrower.money %></h4>
<h4>Amount Raised: <%= @borrower.raised %></h4>

<h3>List of people who lent you money:</h3>
<table class="table table-striped table-bordered">
	<tr>
		<th>Name</th>
		<th>Email</th>
		<th>Amount Lent</th>
	</tr>
	<% @transactions.each do |t|%>
		<tr>
			<td><%= t.lender.first_name %> <%= t.lender.last_name %></td>
			<td><%= t.lender.email %></td>
			<td><%= t.amount %></td>
		</tr>
	<% end %>
</table>