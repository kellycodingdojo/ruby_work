<h1>Welcome, <%= @user.username %></h1>

<% if flash[:errors]%>
	<% flash[:errors].each do |e|%>
		<p><%= e %></p>
	<%end%>
<%end%>

<form action="/messages" method="POST">
	<input type="text" name="message[message]">
	<input type="submit" value="Post Message">
</form>

<% @messages.each do |i| %>
	<p><%= i.message %></p>
<%end %>

<a href="/logout">Logout</a>