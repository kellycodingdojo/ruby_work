<style>
	form{
		color: blue;
		border: 2px solid red;
		margin:5px;
		padding: 5px;
		width: 400px;
	}

</style>

<p>Welcome to the Dojo Events Page</p>
<p> <%= flash[:errors] %> </p>
<form action="/register" method="POST">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<p>First Name: <input type="text" name="user[first_name]"></p>
	<p>Last Name: <input type="text" name="user[last_name]"></p>
	<p>Location: <input type="text" name="user[location]"></p>
	State: <select name="user[state]" class="select">
				<option value="CA">California</option>
				<option value="MI">Michigan</option>
				<option value="OH">BumkinVille</option>
				<option value="FL">Florida</option>
			</select>
	<p>Email: <input type="text" name="user[email]"></p>
	<p>Password: <input type="text" name="user[password]"></p>
	<p>Confirm Password: <input type="text" name="user[password_confirmation]"></p>
	<input type="submit" value="Register">
</form>
<br>
<form action="/login" method="POST">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<p>Email: <input type="text" name="user[email]"></p>
	<p>Password: <input type="text" name="user[password]"></p>
	<input type="submit" value="Login">
</form>

