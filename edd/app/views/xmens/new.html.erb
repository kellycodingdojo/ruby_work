<h1>New Xmen</h1>

<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
		<p><%= e %></p>
	<% end %>	
<% end %>

<form action="/xmens" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<p>
		<label>Name</label>
		<input type="text" name="xman[name]">
	</p>
	<p>
		<label>Power</label>
		<input type="text" name="xman[power]">
	</p>	
	<input type="submit" name="Create">
</form>