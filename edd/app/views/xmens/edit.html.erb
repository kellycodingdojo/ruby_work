<h1>Edit <%= @xman.name %></h1>

<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
		<p><%= e %></p>
	<% end %>	
<% end %>

<form action="/xmens/<%= @xman.id %>" method="post">
	<input type="hidden" name="_method" value="patch">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<p>
		<label>Name</label>
		<input type="text" name="xman[name]">
	</p>
	<p>
		<label>Power</label>
		<input type="text" name="xman[power]">
	</p>	
	<input type="submit" name="Update">
</form>